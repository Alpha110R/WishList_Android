<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/wishlist_item"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wl_item_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="150dp"
            android:text="WISHLIST ITEM" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/shape_rounded_stroke"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/liqueur_BTN_minus"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_minus"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconTint="#DFC25A" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/liqueur_LBL_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="00"
                android:textColor="#DFC25A"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/liqueur_BTN_plus"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_plus"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconTint="#DFC25A" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>


</androidx.cardview.widget.CardView>